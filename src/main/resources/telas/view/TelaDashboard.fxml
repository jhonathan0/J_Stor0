<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-color: #0f0f0f; -fx-padding: 20;">
    
    <!-- TOP: Título com efeito melhorado -->
    <top>
        <VBox spacing="10" style="-fx-padding: 0 0 30 0;">
            <Label text="J_STOR DASHBOARD" 
                   style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #00ffff; 
                          -fx-effect: dropshadow(gaussian, rgba(0,255,255,0.8), 0,0,0,0),
                                 dropshadow(gaussian, rgba(0,255,255,0.4), 30,0,0,0),
                                 dropshadow(gaussian, rgba(0,255,255,0.3), 60,0,0,0);"/>
