                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Card Vendas -->
                    <VBox fx:id="cardVendas" spacing="8" styleClass="card-3d" 
                          style="-fx-background-color: linear-gradient(135deg, #fa709a 0%, #fee140 100%); -fx-padding: 25; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: rgba(255,107,0,0.5); -fx-border-width: 2;">
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Label text="💰" style="-fx-font-size: 36px; -fx-effect: dropshadow(gaussian, white, 10,0,0,0);"/>
                            <VBox spacing="5">
                                <Label text="Vendas (mês)" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-opacity: 0.9;"/>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label fx:id="labelVendasMes" text="R$ 28.500" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                                    <Label text="↑ 8%" style="-fx-text-fill: #00ff88; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: rgba(0,255,136,0.2); -fx-padding: 2 6; -fx-background-radius: 10;"/>
                                </HBox>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Card Clientes Ativos -->
                    <VBox fx:id="cardClientes" spacing="8" styleClass="card-3d" 
                          style="-fx-background-color: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); -fx-padding: 25; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: rgba(0,255,255,0.5); -fx-border-width: 2;">
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Label text="👥" style="-fx-font-size: 36px; -fx-effect: dropshadow(gaussian, white, 10,0,0,0);"/>
                            <VBox spacing="5">
                                <Label text="Clientes Ativos" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-opacity: 0.9;"/>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label fx:id="labelClientesAtivos" text="2.847" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                                    <Label text="↑ 5%" style="-fx-text-fill: #00ff88; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: rgba(0,255,136,0.2); -fx-padding: 2 6; -fx-background-radius: 10;"/>
                                </HBox>
                            </VBox>
                        </HBox>
                    </VBox>
                </HBox>

                <!-- 🚀 SEGUNDA LINHA: Métricas Secundárias -->
                <HBox spacing="20" alignment="CENTER">
                    <!-- Card Produtos em Falta -->
                    <VBox fx:id="cardFalta" spacing="8" styleClass="card-3d" 
                          style="-fx-background-color: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); -fx-padding: 20; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: rgba(0,255,255,0.5); -fx-border-width: 2;">
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Label text="⚠️" style="-fx-font-size: 28px;"/>
                            <VBox spacing="5">
                                <Label text="Produtos em Falta" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-opacity: 0.9;"/>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label fx:id="labelProdutosFalta" text="23" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                                    <Label text="↓ 3%" style="-fx-text-fill: #ff4444; -fx-font-size: 10px; -fx-font-weight: bold; -fx-background-color: rgba(255,68,68,0.2); -fx-padding: 2 6; -fx-background-radius: 10;"/>
                                </HBox>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Card Novos Clientes -->
                    <VBox fx:id="cardNovos" spacing="8" styleClass="card-3d" 
                          style="-fx-background-color: linear-gradient(135deg, #ff6b6b 0%, #ffa726 100%); -fx-padding: 20; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: rgba(255,107,0,0.5); -fx-border-width: 2;">
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Label text="🆕" style="-fx-font-size: 28px;"/>
                            <VBox spacing="5">
                                <Label text="Novos Clientes" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-opacity: 0.9;"/>
                                <HBox spacing="10" alignment="CENTER_LEFT">
