                                    <Label text="↑ 22%" style="-fx-text-fill: #00ff88; -fx-font-size: 10px; -fx-font-weight: bold; -fx-background-color: rgba(0,255,136,0.2); -fx-padding: 2 6; -fx-background-radius: 10;"/>
                                </HBox>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Card Ticket Médio -->
                    <VBox fx:id="cardTicket" spacing="8" styleClass="card-3d" 
                          style="-fx-background-color: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); -fx-padding: 20; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: rgba(0,255,255,0.5); -fx-border-width: 2;">
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Label text="📊" style="-fx-font-size: 28px;"/>
                            <VBox spacing="5">
                                <Label text="Ticket Médio" style="-fx-text-fill: #333; -fx-font-size: 12px; -fx-opacity: 0.9;"/>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label fx:id="labelTicketMedio" text="R$ 89,90" style="-fx-text-fill: #333; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                                    <Label text="↑ 7%" style="-fx-text-fill: #00aa00; -fx-font-size: 10px; -fx-font-weight: bold; -fx-background-color: rgba(0,170,0,0.2); -fx-padding: 2 6; -fx-background-radius: 10;"/>
                                </HBox>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- NOVO CARD: Lucro Líquido -->
                    <VBox fx:id="cardLucro" spacing="8" styleClass="card-3d" 
                          style="-fx-background-color: linear-gradient(135deg, #8e2de2 0%, #4a00e0 100%); -fx-padding: 20; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: rgba(147,51,234,0.5); -fx-border-width: 2;">
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Label text="💎" style="-fx-font-size: 28px;"/>
                            <VBox spacing="5">
                                <Label text="Lucro Líquido" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-opacity: 0.9;"/>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label fx:id="labelLucroLiquido" text="R$ 12.450" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                                    <Label text="↑ 15%" style="-fx-text-fill: #00ff88; -fx-font-size: 10px; -fx-font-weight: bold; -fx-background-color: rgba(0,255,136,0.2); -fx-padding: 2 6; -fx-background-radius: 10;"/>
                                </HBox>
                            </VBox>
                        </HBox>
                    </VBox>
                </HBox>

                <!-- 📈 TERCEIRA LINHA: Gráficos e Visualizações -->
                <HBox spacing="20" alignment="CENTER">
                    <!-- Gráfico de Categorias Melhorado -->
                    <VBox style="-fx-background-color: #1e1e1e; -fx-padding: 20; -fx-background-radius: 15; -fx-border-color: #00ffff; -fx-border-width: 2; -fx-border-radius: 15;" 
                          HBox.hgrow="ALWAYS" styleClass="card-3d">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="📈 Produtos por Categoria" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                            <Label text="🔥 EM TEMPO REAL" style="-fx-text-fill: #00ffff; -fx-font-size: 10px; -fx-background-color: rgba(0,255,255,0.2); -fx-padding: 2 6; -fx-background-radius: 10;"/>
                        </HBox>
                        <PieChart fx:id="chartCategorias" style="-fx-background-color: transparent; -fx-text-fill: white;" prefHeight="250"/>
                    </VBox>

                    <!-- Meta do Mês com Design Melhorado -->
                    <VBox spacing="15" style="-fx-background-color: #1e1e1e; -fx-padding: 20; -fx-background-radius: 15; -fx-border-color: #00ff88; -fx-border-width: 2; -fx-border-radius: 15;" styleClass="card-3d">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="🎯 Meta Mensal" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                            <Label text="💰 R$ 38.000" style="-fx-text-fill: #00ff88; -fx-font-size: 10px; -fx-background-color: rgba(0,255,136,0.2); -fx-padding: 2 6; -fx-background-radius: 10;"/>
                        </HBox>
                        
                        <VBox spacing="10" alignment="CENTER">
                            <Label fx:id="labelMeta" text="75%" style="-fx-text-fill: #00ff88; -fx-font-size: 32px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #00ff88, 10,0,0,0);"/>
                            
                            <!-- Barra de progresso customizada -->
                            <StackPane style="-fx-background-color: #333; -fx-background-radius: 10; -fx-pref-height: 20; -fx-pref-width: 200;">
                                <Rectangle fx:id="progressFill" style="-fx-fill: linear-gradient(to right, #00ff88, #00ffff); -fx-arc-height: 10; -fx-arc-width: 10;" 
                                           height="20" width="150"/>
                            </StackPane>
                            
                            <Label fx:id="labelMetaDetalhada" text="R$ 28.500 / R$ 38.000" style="-fx-text-fill: #cccccc; -fx-font-size: 12px;"/>
                            <Label text="🎉 Faltam R$ 9.500 para bater a meta!" style="-fx-text-fill: #00ffff; -fx-font-size: 10px; -fx-font-style: italic;"/>
                        </VBox>
                    </VBox>
                </HBox>

                <!-- 🎊 QUARTA LINHA: Novos Elementos Visuais -->
                <HBox spacing="20" alignment="CENTER">
                    <!-- Produto Mais Vendido -->
                    <VBox spacing="10" style="-fx-background-color: #1e1e1e; -fx-padding: 20; -fx-background-radius: 15; -fx-border-color: #ff6b00; -fx-border-width: 2; -fx-border-radius: 15;" styleClass="card-3d">
                        <Label text="🔥 Produto em Destaque" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="👕" style="-fx-font-size: 40px; -fx-effect: dropshadow(gaussian, gold, 15,0,0,0);"/>
                            <VBox spacing="5">
                                <Label fx:id="labelProdutoTop" text="Camiseta Basic Preta" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                                <Label text="📊 128 vendas este mês" style="-fx-text-fill: #00ffff; -fx-font-size: 12px;"/>
                                <Label text="⭐ 4.8/5.0 de satisfação" style="-fx-text-fill: #ffaa00; -fx-font-size: 12px;"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Alertas Rápidos -->
                    <VBox spacing="10" style="-fx-background-color: #1e1e1e; -fx-padding: 20; -fx-background-radius: 15; -fx-border-color: #ff4444; -fx-border-width: 2; -fx-border-radius: 15;" styleClass="card-3d">
                        <Label text="🚨 Alertas do Sistema" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                        <VBox spacing="8">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="⚠️" style="-fx-text-fill: #ffaa00;"/>
                                <Label text="5 produtos com estoque crítico" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                            </HBox>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="📦" style="-fx-text-fill: #00ffff;"/>
                                <Label text="Pedido #2847 atrasado" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                            </HBox>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="👥" style="-fx-text-fill: #00ff88;"/>
                                <Label text="15 novos clientes hoje" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>