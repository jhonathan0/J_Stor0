                   style="-fx-font-size: 16px; -fx-text-fill: #cccccc; -fx-font-style: italic;"/>
        </VBox>
    </top>
    
    <!-- CENTER: Conteúdo principal SUPER ATUALIZADO -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-color: transparent;">
            <VBox spacing="25" style="-fx-padding: 10;">
                
                <!-- 🔥 PRIMEIRA LINHA: Métricas Principais com Efeito 3D -->
                <HBox spacing="20" alignment="CENTER">
                    <!-- Card Total Produtos -->
                    <VBox fx:id="cardProdutos" spacing="8" styleClass="card-3d" 
                          style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -fx-padding: 25; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: rgba(0,255,255,0.5); -fx-border-width: 2;">
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Label text="📦" style="-fx-font-size: 36px; -fx-effect: dropshadow(gaussian, white, 10,0,0,0);"/>
                            <VBox spacing="5">
                                <Label text="Total Produtos" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-opacity: 0.9;"/>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label fx:id="labelTotalProdutos" text="1.247" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                                    <Label text="↑ 12%" style="-fx-text-fill: #00ff88; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: rgba(0,255,136,0.2); -fx-padding: 2 6; -fx-background-radius: 10;"/>
